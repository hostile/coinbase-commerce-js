{
  "name": "coinbase-commerce-js",
  "version": "0.01",
  "description": "The modern library for Coinbase Commerce integration",
  "bugs": {
    "url": "https://github.com/hostile/coinbase-commerce-js/issues"
  },
  "author": "george@hostile.org",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0"
  },
  "main": "src/index.ts",
  "scripts": {
    "build": "npx tsc && npx tsc-alias",
    "publish": "npx tsc && npx tsc-alias && npm run publish",
    "eslint:lint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "start:dev": "tsc && nodemon -e ts --exec \"npm run build && node dist/index.js\"",
    "test": "jest",
    "prepare": "husky install"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
    "ext": "ts, js"
  },
  "dependencies": {
    "axios": "^1.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-jest": "^0.0.1",
    "typescript": "^5.4.5"
  }
}
